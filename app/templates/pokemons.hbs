<p>pokemons.hbs</p>
{{!-- <p class="remaining">
	You have caught {{caught}} pokemon{{inflection}} and have <strong>{{remaining}}</strong> left
</p> --}}
<ul>
	{{#each controller}}
		<li {{bind-attr class="isCaught:caught"}}>
			<div class="input-container">
				{{input type="checkbox" checked=isCaught}}
			</div>
			<div class="image-container">
				<img {{bind-attr src=image}}>
			</div>
			<dl>
				<dt>ID</dt>
				<dd>{{id}}</dd>
				<dt>Number</dt>
				<dd>{{number}}</dd>
				<dt>Name</dt>
				<dd>{{name}}</dd>
			</dl>
		</li>
	{{/each}}
</ul>